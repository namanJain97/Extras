def pig_latin(text):
  say = ""
  # Separate the text into words
  words = text.split()
  for word in words:
    # Create the pig latin word and add it to the list
    if word[0] in "aeiou":
      say += word + "way"
    else:
      # Find the first vowel in the word
      first_vowel = word.find("a")
      first_vowel = word.find("e") if first_vowel == -1 else first_vowel
      first_vowel = word.find("i") if first_vowel == -1 else first_vowel
      first_vowel = word.find("o") if first_vowel == -1 else first_vowel
      first_vowel = word.find("u") if first_vowel == -1 else first_vowel

      # If the word starts with multiple consonants, move them to the end of the word and add "ay"
      if first_vowel > 0:
        say += word[first_vowel:] + word[:first_vowel] + "ay"
      else:
        say += word + "way"
    # Turn the list back into a phrase
    say += " "
  return say[:-1]
		
print(pig_latin("hello how are you")) # Should be "ellohay owhay reaay ouyay"
print(pig_latin("programming in python is fun")) # Should be "rogrammingpay niay ythonpay siay unfay"


