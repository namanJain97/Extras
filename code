# Fetches all fields name from columns
def get_column_names(driver):
    
    column_fields = driver.find_elements(By.XPATH, all_col_fields)
    
    # Iterate through each cell element
    for element in column_fields:
            all_fields = element
            
    return all_fields

# For selecting a specific column by clicking on text
def select_columnByText(driver, column_name):
    
    column_input = driver.find_element(By.XPATH, filter_column)
    column_input.clear()
    column_input.send_keys(column_name)
    time.sleep(1)
    
    for element in get_column_names(driver):
        if element.text == column_name:
            element.click()
            
    column_input.clear()
    column_input.send_keys("last action performed on")
    time.sleep(1)
    sel_col  = driver.find_element(By.XPATH, select_filtered_col)
    sel_col.click()
