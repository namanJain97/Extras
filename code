import scipy.stats as stats
import pandas as pd
import seaborn as sns
import matplotlib.pyplot as plt

%matplotlib inline

df1 = pd.read_csv(r'C:\Users\jainnbr\goldeinputDateNormalised.csv')

categorical_cols = df1.select_dtypes(include=['object']).columns
df1[categorical_cols] = df1[categorical_cols].apply(lambda x: pd.Categorical(x).codes)

df2 = pd.read_csv(r'C:\Users\jainnbr\sampledDataWith10Percentage.csv')

# Pairplot for raw data (df1)
print("Pairplot for raw data (df1)")
sns.set()
sns.pairplot(df1[categorical_cols])
plt.show()

# Pairplot for sampled data (df2)
print("Pairplot for sampled data (df2)")
sns.pairplot(df2[categorical_cols])
plt.show()
